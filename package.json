{
  "name": "messenger-app",
  "version": "1.0.0",
  "description": "A modern desktop messenger application",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "webpack serve --mode development",
    "start:electron": "electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "webpack --mode production",
    "build:electron": "tsc -p tsconfig.electron.json",
    "pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:portable": "npm run build && electron-builder --win portable --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "react",
    "messenger",
    "chat",
    "desktop"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "socket.io-client": "^4.8.1",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "electron": "^39.2.5",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/styled-components": "^5.1.36",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.5",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.messenger.app",
    "productName": "Messenger App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/electron/**/*",
      "dist/react/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "MessengerApp-${version}-portable.exe"
    }
  }
}
